class Solution {
    public int[] productExceptSelf(int[] nums) {
        int product=1,count=0;
        for(int i=0;i<nums.length;i++){
            if(nums[i]!=0){
                product*=nums[i];
            }else{
                count++;
            }
        }
        for(int i=0;i<nums.length;i++){
            if(count>1){
                nums[i]=0;
            }else if(count==1){
                if(nums[i]!=0){
                    nums[i]=0;
                }else{
                    nums[i]=product;
                }
            }else{
                nums[i]=product/nums[i];
            }
        }
        return nums;
    }
}
